<!DOCTYPE html>
<html>
  <head>
    <title>BookStore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="body">
    <div class="container-fluid container-100vh p-0">
      <div class="row w-100  align-items-center justify-content-center p-0">
        <div class="col-12 col-sm-9 col-md-7 col-lg-5 p-0">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
