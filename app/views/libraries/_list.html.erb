<div class="shadow m-0 p-3  bg-light-gray">
  <p id="notice m-0 p-0"><%= notice %></p>
  <% @libraries.each do |library| %>
    <%= link_to(library) do %>
      <div class="my-2 bg-white p-3 d-flex justify-content-start">
        <%= image_tag(library.image, class: "iconic mr-3") %>
        <div> 
          <p class="text-secondary h6 m-0 p-0 py-1"><strong>Category Name: </strong><%= library.name %></p>
          <p class="text-secondary h6 m-0 p-0 py-2"><strong>Created: </strong> <%= library.created_at.day %>-<%= library.created_at.month %>-<%= library.created_at.year %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>